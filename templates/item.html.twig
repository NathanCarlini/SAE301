
{% for guitar in liste %}
    
        <div class="page-product">
                    <div class="page-product__left-container">
                        <img src="{{guitar.pict}}" alt="{{guitar.name}}" class="page-product__left-container__main-image">
                        <div class="page-product__left-container__images-container">
                            <img src="{{asset('images/Guitar2.png')}}" alt="image-guitare" class="page-product__left-container__image-selection">
                            <img src="{{asset('images/Guitar3.png')}}" alt="image-guitare" class="page-product__left-container__image-selection">
                            <img src="{{asset('images/Guitar4.png')}}" alt="image-guitare" class="page-product__left-container__image-selection">
                            <img src="{{asset('images/Guitar5.png')}}" alt="image-guitare" class="page-product__left-container__image-selection">
                        </div>
                    </div>
                <div class="page-product__right-container">
                            <img src="{{asset('images/gamme.png')}}" alt="logo-marque" class="page-product__right-container__gamme">
                            <h3 class="page-product__right-container__name">{{guitar.name}}</h3>
                    <div class="page-product__right-container__colors-container">
                        <img src="{{asset('images/couleur.png')}}" alt="" class="page-product__right-container__color">
                        <img src="{{asset('images/couleur.png')}}" alt="" class="page-product__right-container__color">
                    </div>
                        <p class="page-product__right-container__name-color">{{guitar.couleur}}</p>
                        <p class="page-product__right-container__ref">{{guitar.reference}} </p>
                    <div class="star-container">
